<body>

  <head>
    <link rel="stylesheet" href="style.css">
    <title>Shortinger</title>
  </head>
  <main>
    <style>
      * {

        padding: 0;
        margin: 0;
      
      }

      main {
        background-color: #264653;
        height: 100vh;
        font-family: "Avenir", sans-serif;
      }

      #header-div {
        width: 60%;
        margin: auto;
        padding-top: 100px;
        text-align: center;
        font-family: "Josefin Sans", sans-serif;
        color: #e9c46a;
        font-size: 40px;
      }
      #content-div {
        display: flex;
        flex-direction: column;
        width: 80%;
        margin: auto;
      }

      #input-div {
        width: 80%;
        margin: auto;
        margin-bottom: 25px;
        display: flex;

        flex-direction: row;
        justify-content: space-between;
      }

      #output-div {
        display: flex;
        flex-direction: row;
        width: 80%;
        justify-content: space-between;
        background-color: #e9c46a;
        margin: auto;
        padding: 5px;
        border: 3px solid #e9c46a;
        border-radius: 10px;
        align-items: center;
        margin-bottom: 100px;
      }

      #error-div {
        width: 80%;
        margin: auto;
        color: #e76f51;
        font-style: italic;
        font-size: 18px;
        text-align: center;
      }

      .content-row {
        display: flex;
      }
      input[type=text] {
        width: 70%;
        font-size: 18px;
        padding: 10px;
        border: 1px solid white;
        border-radius: 10px;
      }


      .button {
        background-color: #2a9d8f;
        color: white;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        border: 1px solid #2a9d8f;
        border-radius: 10px;
        padding: 10px;
        margin-left: 5px;
        display: flex;
        transition-duration: 0.2s;
      }

      .button:hover {
        background-color: #297c74;
      }

      #new-url {
        display: flex;
        color: black;
        padding: 5px;
        font-size: 24px;
      }

      #new-url-label {
        font-size: 18px;
        display: flex;

      }
    </style>
    <div id="header-div" class="">
      <h1 class="">Link Shortener</h1>
    </div>

    <form action="/url" method="post">
      <div id="content-div">
        <div id="input-div">
          <input type="text" class="text-field content-row" name="url" placeholder="Enter URL here . . ."
            id="input-field" required />
          <button id="shorten" type="submit" class="content-row button">Shorten URL</button>
          <button type="button" id="clear-btn" class="content-row button">Clear</button>
        </div>

        <div id="output-div">
          <div class="content-row" id="new-url-label">Your short URL:
            <% if (locals.id) { %>
              <p id="short-url">http://localhost:3001/url/<%= id %>
              </p>
              <% } %>
          </div>
          <div id="new-url" class="content-row"></div>
          <button type="button" id="copy-btn" data-clipboard-target="#new-url" class="content-row button">Copy</button>
        </div>
        <div class="" id="error-div">
          <p class="content-row" id="error-text"></p>
        </div>
      </div>
    </form>


  </main>

  <script>
    const copybtn = document.getElementById("copy-btn")


    copybtn.addEventListener("click", () => {
      const shorturl = document.getElementById("short-url");
      const shorten = shorturl.innerHTML
      navigator.clipboard.writeText(shorten)
     
    })
    const clearbtn = document.getElementById("clear-btn")
    clearbtn.addEventListener("click", () => {
      const Clear = document.getElementById("input-field")
      Clear.value = " "
    })
  </script>

</body>